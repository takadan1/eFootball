<%# 掲示板ページのコンテナ %>
<div class="page-container">

  <%# ページヘッダー %>
  <div class="page-header">
    <h1>掲示板（雑談する）</h1>   
  </div>

  <%# 投稿セクション %>
  <div class="posts-section">
    <div class="section-header">
      <h3>投稿一覧</h3>
      <%= link_to "新しく投稿する", new_share_path, class: "btn btn-primary" %>
    </div>

    <%# 投稿リスト %>
    <div class="posts-list">
      <% if @shares.present? %>
        <% @shares.each do |t| %>
          <%# 投稿カード %>
          <div class="post-card">
            <% if t.image.attached? %>
              <div class="card-image-wrapper">
                <%= image_tag t.image, class: "card-image" %>
              </div>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= t.about %></p>
              <div class="card-actions">
                <%= link_to "詳細へ", share_path(t.id), class: "btn btn-outline" %>


                <%# app/views/shares/index.html.erb のループ内 %>

<%# 投稿者本人、または管理者が操作できるようにする %>
<% if user_signed_in? && (current_user.id == t.user_id || current_user.admin?) %>
  <div class="card-actions">
    <%# 投稿者本人のみ編集可能 %>
    <% if current_user.id == t.user_id %>
      <%= link_to "編集", edit_share_path(t.id), class: "btn btn-secondary" %>
    <% end %>

    <%# 投稿者本人または管理者が削除可能 %>
    <%= button_to "削除", share_path(t.id),
      method: :delete,
      form: { data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } },
      class: "btn btn-danger" %>
  </div>
<% end %>




              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="no-posts-message">まだ投稿がありません。</p>
      <% end %>
    </div>
  </div>

</div>
